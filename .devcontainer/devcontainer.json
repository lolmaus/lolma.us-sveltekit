// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"name": "Slice and Dice",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
	"features": {
		"ghcr.io/cirolosapio/devcontainers-features/alpine-node:0": {
			"corepack": true,
			"pnpmVersion": "9.2.0"
		},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-curl:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-gh-cli:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-nano:0": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-starship:0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"kamikillerto.vscode-colorize",
				"lafe.contextualduplicate",
				"mrmlnc.vscode-duplicate",
				"dbaeumer.vscode-eslint",
				"zokugun.explicit-folding",
				"waderyan.gitblame",
				"mhutchie.git-graph",
				"github.vscode-github-actions",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.vscode-pull-request-github",
				"eamodio.gitlens",
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"xyz.local-history",
				"Yukai.map-replace-js",
				"yzhang.markdown-all-in-one",
				"CodeQue.codeque",
				"viktorzetterstrom.non-breaking-space-highlighter",
				"ziyasal.vscode-open-in-github",
				"ms-playwright.playwright",
				"DanishSarwar.reverse-search",
				"buenon.scratchpads",
				"tomoki1207.selectline-statusbar",
				"svelte.svelte-vscode",
				"bradlc.vscode-tailwindcss",
				"austenc.tailwind-docs",
				"rangav.vscode-thunder-client",
				"vitest.explorer",
				"macabeus.vscode-fluent",
				"tomoki1207.vscode-input-sequence",
				"EditorConfig.EditorConfig",
				"esbenp.prettier-vscode"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
